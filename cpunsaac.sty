\newboolean{ShowUsage}
\setboolean{ShowUsage}{false} 
\newcommand{\ShowUsage}{\setboolean{ShowUsage}{false}}
\newcommand{\HideUsage}{\setboolean{ShowUsage}{true}}

\newboolean{ShowComplexity}
\setboolean{ShowComplexity}{false} 
\newcommand{\ShowComplexity}{\setboolean{ShowComplexity}{false}}
\newcommand{\HideComplexity}{\setboolean{ShowComplexity}{true}}

\newboolean{ShowAuthor}
\setboolean{ShowAuthor}{false} 
\newcommand{\ShowAuthor}{\setboolean{ShowAuthor}{false}}
\newcommand{\HideAuthor}{\setboolean{ShowAuthor}{true}}

\newcommand{\Algorithm}[6]{
    \subsection{#1}
    \ifthenelse{\equal{#2}{} \OR \boolean{ShowUsage}}{}{\textbf{Uso:} #2 \\}
    
    \ifthenelse{\equal{#3}{} \OR \boolean{ShowComplexity}}{}{\textbf{Complejidad:} #3 \\}
    \ifthenelse{\equal{#6}{} \OR \boolean{ShowAuthor}}{}{\textbf{Autor:} #6 \\}
    \inputminted[]{#4}{#5}
}
